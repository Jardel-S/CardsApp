        android:layout_height="match_parent"
        android:layout_marginBottom="32dp"
        android:paddingLeft="15dp"
        android:paddingTop="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="15dp">

        <FrameLayout
            android:layout_width="match_parent"
